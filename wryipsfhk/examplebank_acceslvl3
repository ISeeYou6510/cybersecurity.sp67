<body>
  <div class="bank-container">
    <h1>Example Bank – Level 3</h1>

    <div class="account-info">
      <p><strong>Imię i nazwisko:</strong> Jan Kowalski</p>
      <p><strong>Stan konta:</strong> <span id="balance">21.37</span> zł</p>
    </div>

    <h2>Historia transakcji</h2>
    <table id="history">
      <tr><th>Data</th><th>Opis</th><th>Kwota</th></tr>
      <tr><td>2025-09-01</td><td>Hotdog – Żabka</td><td>-5,99 zł</td></tr>
      <tr><td>2025-09-01</td><td>Monopolowy</td><td>-13,99 zł</td></tr>
    </table>

    <div class="controls">
      <h3>Operacje na koncie</h3>
      <input type="number" id="amount" step="0.01" placeholder="Kwota">
      <button onclick="addMoney()">Dodaj</button>
      <button onclick="subtractMoney()">Odejmij</button>
    </div>
  </div>

  <script>
    let balance = 21.37;
    const balanceElement = document.getElementById("balance");
    const historyTable = document.getElementById("history");

    function addMoney(){
      let amount = parseFloat(document.getElementById("amount").value);
      if(isNaN(amount) || amount <= 0) return;
      balance += amount;
      balanceElement.textContent = balance.toFixed(2);
      addHistory("Wpłata własna", amount);
    }

    function subtractMoney(){
      let amount = parseFloat(document.getElementById("amount").value);
      if(isNaN(amount) || amount <= 0) return;
      balance -= amount;
      balanceElement.textContent = balance.toFixed(2);
      addHistory("Wypłata własna", -amount);
    }

    function addHistory(description, amount){
      let row = historyTable.insertRow(-1);
      let date = new Date().toISOString().split("T")[0];
      row.insertCell(0).textContent = date;
      row.insertCell(1).textContent = description;
      row.insertCell(2).textContent = (amount > 0 ? "+" : "") + amount.toFixed(2) + " zł";
    }
  </script>
</body>
