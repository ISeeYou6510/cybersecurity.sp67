<body>
  <h1>Level 1</h1>
  <p>Podaj hasło, aby dostać się dalej</p>
  <input type="password" id="password" placeholder="Wpisz hasło">
  <button onclick="checkPassword()">Zaloguj</button>
  <div id="result"></div>

  <script>
    // UWAGA: Hasło jest wpisane na stałe w kodzie!
    const secretPassword = "SuperSekret123";

    function checkPassword() {
      const input = document.getElementById("password").value;
      if (input === secretPassword) {
        document.getElementById("result").innerHTML = "✅ Dostęp przyznany! Brawo!";
      } else {
        document.getElementById("result").innerHTML = "❌ Złe hasło";
      }
    }
  </script>
